[Unit]
Description=thoth daemon
Requires=thoth.socket
After=network.target

[Service]
User=root
Group=root
WorkingDirectory=/app/thoth
Environment="PATH=/usr/local/bin"
ExecStart=/usr/local/bin/gunicorn --access-logfile - --workers 3 --bind unix:/run/thoth.sock config.wsgi:application

[Install]
WantedBy=multi-user.target
